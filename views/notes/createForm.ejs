<% include ../partials/header %> <% include ../partials/nav %>

<form class="mt-4" action="/notes" method="POST">
  <div class="form-group">
    <label for="titleInput1">Title</label>
    <input type="text" name='title' class="form-control" id="titleInput1" placeholder="title">
  </div>
  <div class="form-group">
    <label for="categorySelect1">Category</label>
    <select name="category" class="form-control" id="categorySelect1">
      <option>general</option>
      <option>html/css</option>
      <option>javascript</option>
      <option>node</option>
    </select>
  </div>
  
  <div class="form-group">
    <label for="noteTextarea1">Body</label>
    <textarea name="body" class="form-control" id="noteTextarea1" rows="15"></textarea>
  </div>

  <button class="btn btn-lg btn-primary" type="submit">Create Note</button>
</form>

<% include ../partials/footer %>