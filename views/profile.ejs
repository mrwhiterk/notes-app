<% include ./partials/header %> <% include ./partials/nav %>
<main>
  <div class="container emp-profile">
    <div class="row">
      <div class="col-md-4">
        <div class="profile-img p-5">
          <img src="https://www.fillmurray.com/100/100" />
        </div>
      </div>
      <div class="col-md-6">
        <div class="profile-head pt-5 pr-5 pb-5">
          <ul class="nav nav-tabs" id="myTab" role="tablist">
            <li class="nav-item">
              <a
                class="nav-link active"
                id="home-tab"
                data-toggle="tab"
                href="#home"
                role="tab"
                aria-controls="home"
                aria-selected="false"
              >
                About
              </a>
            </li>
            <li class="nav-item">
              <a
                class="nav-link"
                id="profile-tab"
                data-toggle="tab"
                href="#profile"
                role="tab"
                aria-controls="profile"
                aria-selected="true"
              >
                Edit Profile
              </a>
            </li>
          </ul>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-4 d-flex justify-content-center">
        <a href="#">
          <button class="btn btn-primary">
            <i class="fas fa-file-upload"></i>
          </button>
        </a>
      </div>
      <div class="col-md-8">
        <div class="tab-content profile-tab" id="myTabContent">
          <div
            class="tab-pane fade show active"
            id="home"
            role="tabpanel"
            aria-labelledby="home-tab"
          >
            <div class="row">
              <div class="col-md-3">
                <label>Username</label>
              </div>
              <div class="col-md-9 border-left"><%= user.username %></div>
            </div>
            <div class="row">
              <div class="col-md-3">
                <label>Email</label>
              </div>
              <div class="col-md-9 border-left"><%= user.email %></div>
            </div>

            <div class="row"></div>
          </div>
          <div
            class="tab-pane fade"
            id="profile"
            role="tabpanel"
            aria-labelledby="profile-tab"
          ></div>
        </div>
      </div>
    </div>
  </div>
</main>

<% include ./partials/footer %>
